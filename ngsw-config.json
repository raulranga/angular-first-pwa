{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/media/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "breweries-api",
      "urls": [
        "https://api.openbrewerydb.org/v1/breweries"
      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxAge": "1d",
        "maxSize": 1
      }
    },
    {
      "name": "users-api",
      "urls": [
        "https://randomuser.me/api/?results=50"
      ],
      "cacheConfig": {
        "strategy": "freshness",
        "timeout": "5s",
        "maxAge": "1d",
        "maxSize": 1
      }
    }
  ]
}
